<!-- app/views/photos/_modal.html.erb -->
<div id="photo-modal-<%= photo.id %>" class="z-50 fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center hidden">
  <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
    <div class="bg-white p-4">
     <div class="w-full">
        <div class="flex flex-col items-center pb-10">
          <%= image_tag(photo.thumbnail_url, alt: photo.title, class: "w-24 h-24 mb-3 rounded-full shadow-lg") %>
          <h5 class="mb-2 text-xl text-center font-medium text-gray-900"><b>Album Title:</b> <%= album.title %></h5>
          <h5 class="mb-1 text-xl text-center font-medium text-gray-900"><b>Photo Title:</b> <%= photo.title %></h5>
          <span class="mt-3 text-sm text-gray-500"><b>Album Link:</b> <%= link_to "https://jsonplaceholder.typicode.com/albums/#{photo.album_id}", "https://jsonplaceholder.typicode.com/albums/#{photo.album_id}", target: "_blank" %></span>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
      <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" onclick="document.getElementById('photo-modal-<%= photo.id %>').classList.add('hidden')">
        Close
      </button>
    </div>
  </div>
</div>
