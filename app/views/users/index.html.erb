

<div class="mt-14 px-5 container">
  <%= form_with url: search_path, class: "max-w-xl mx-auto mb-16 flex", method: :get do |form| %>
    <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only ">Search</label>
     <div class="relative w-full">
      <%= form.text_field :query, placeholder: "Kullanıcı ara", class: "block w-full p-4 pl-4 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500", id:"search" %>
      <div class="absolute inset-y-0 right-2 flex items-center pr-4">
        <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
        </svg>
      </div>
    </div>
    <%= form.submit "Search", class: "ml-2 px-5 py-2.5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm " %>
  <%= button_to 'Clear', root_path, method: :get, class: "ml-2 px-5 py-2.5 text-gray-700 bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm" %>
  <div class="container flex items-center justify-center">
    <%= link_to  "#", onclick: "document.getElementById('edit-user-modal').classList.remove('hidden')", class: "cursor-pointer ml-2 px-5 py-2.5 text-gray-700 bg-purple-200 hover:bg-purple-300 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm items-center flex" do %>
      Create User <i class="fa-solid fa-plus text-2xl ml-4"></i>
    <% end %>
  </div>
  <% end %>

  <% if @users.empty? %>
    <p class="text-center"> Kullanıcı bulunamadı... </p>
  <% else %>
    <% @users.each do |user| %>
      <%= render 'card', user: user %>
  <% end %>
  <% end %>
</div>


<%= render 'users/new_user' %>
